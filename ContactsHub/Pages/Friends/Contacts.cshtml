@page "{id}"
@model ContactsHub.Pages.Friends.Contacts

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contact[0].Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact[0].Value)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Contact) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        </tr>
    }
    </tbody>
</table>