@page
@model ContactsHub.Pages.Invite.Index

@{
}

<h1>Connect with friends</h1>

<div class="row mt-5">
    <h3>Share your code</h3>
    <div class="card">
        <div class="card-body">
            @Model.ShareCode
        </div>
    </div>

    <div class="card mt-2">
        <div class="card-body">
            @Model.ShareUrl
        </div>
    </div>
</div>

<div class="row mt-5">
    <h3>Have someone's code? Let's connect</h3>
    <form method="post" class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-auto">
            <input asp-for="CreateRequest.Code" class="form-control" placeholder="Your friends code here"/>
            <span asp-validation-for="CreateRequest.Code" class="text-danger"></span>
        </div>
        <div class="col-auto">
            <input type="submit" value="Send Invite" class="btn btn-primary"/>
        </div>

    </form>
</div>
<div class="row mt-3">
    <p>
        <a asp-page="/Requests/Index">See all your invite requests</a>
    </p>
</div>