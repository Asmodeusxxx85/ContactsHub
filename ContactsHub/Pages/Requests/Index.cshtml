@page
@model ContactsHub.Pages.Requests.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h2>Incoming</h2>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FriendRequestIncoming[0].FromUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FriendRequestIncoming[0].DateTimeUtc)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.FriendRequestIncoming) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FromUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeUtc)
            </td>
            <td>
                <form method="post">
                    <input type="hidden" name="id" value="@item.Id" />
                    <button class="btn btn-primary" asp-page-handler="Accept">Accept</button>
                    <button class="btn btn-danger" asp-page-handler="Reject">Reject</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<h2>Outgoing</h2>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FriendRequestOutgoing[0].ToUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FriendRequestOutgoing[0].DateTimeUtc)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.FriendRequestOutgoing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToUser.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeUtc)
            </td>
            <td>
                <a asp-page="./Cancel" asp-route-id="@item.Id">Cancel</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<p><a asp-page="./Create">Create</a></p>
